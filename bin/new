#! /bin/sh -eu

me=$0
medir=`dirname "$me"`

displayHelpMessage () {
    cat >&2 <<EOF

$0 <package_name>

EOF
}

${1+:} false || {
    displayHelpMessage

    exit 2
}

pkgdir=`realpath "${medir}/.."`
srcdir="${pkgdir}/src"
testsdir="${pkgdir}/src/tests"

defaultpkgname=acme
defaultclassname=acme
codefileext=c
GIT=git
SED=sed

main ()
{
    pkgname=$1
    classname=`formatToLowerCamelCase "${pkgname}"`

    createNewBranch

    configureClassName

    removeSkeletonArtefact
    commit

    echo
    echo "Open ${testsdir}/test_${classname}.${codefileext}"
    echo
    echo "And start coding"
    echo
}

formatToLowerCamelCase ()
{
    echo "${1}" | sed -e 's,[[:upper:]][[:lower:]],_\0,g' -e 's,^_,,' -e 's,__,_,g' | tr '[:upper:]' '[:lower:]'
}

createNewBranch ()
{
    checkWorkingTree

    nowday=`date '+%F_%T' | tr : -`

    git checkout -b "${nowday}_${pkgname}"
}

configureClassName ()
{
    sed -i "s/${defaultclassname}/${classname}/" \
        "${testsdir}/test_${defaultclassname}.${codefileext}"

    mv "${testsdir}/test_${defaultclassname}.${codefileext}" \
       "${testsdir}/test_${classname}.${codefileext}"
}

removeSkeletonArtefact ()
{
    git rm $me
}

commit ()
{
    git add \
        "${testsdir}/test_${classname}.${codefileext}"

    git rm --cached "${testsdir}/test_${defaultclassname}.${codefileext}"

    git commit -pm"Add ${pkgname}"
}

checkWorkingTree()
{
    ${GIT} update-index --refresh > /dev/null || :

    test x = x"`${GIT} diff-index --name-only HEAD --`" || {
        echo >&2
        echo >&2 '    The working tree is dirty.'
        echo >&2 '    Please stash or deal with modifications to proceed:'
        echo >&2
        {
            ${GIT} diff-index --name-only HEAD -- | ${SED} -e 's,^,        ,'
        } >&2
        echo >&2

        return 3
    }
}

main ${1+"$@"}
